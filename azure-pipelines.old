trigger:

 - main

pool:
   vmImage: 'ubuntu-latest' 

variables:
   imageName: 'pipelines-javascript-docker'

- task: Docker@2
  inputs:
    containerRegistry: 'docker hub'
    command: 'login'
- task: Docker@2
  inputs:
    containerRegistry: 'docker hub'
    repository: 'cebundy/azure-pipelines-js'
    command: 'buildAndPush'
    Dockerfile: 'app/Dockerfile'
